{
  "name": "crosswords-js",
  "version": "0.1.11",
  "description": "Tiny, lightweight crosswords for HTML5/JS/CSS.",
  "main": "src/index.js",
  "type": "module",
  "devDependencies": {
    "chai": "^4.3.7",
    "connect-livereload": "^0.6.1",
    "cspell": "^6.30.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "esm": "^3.2.25",
    "ignore-styles": "^5.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-pug-transformer": "^1.0.3",
    "webpack": "^5.76.2",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "scripts": {
    "lint": "eslint *.{js,mjs} src/**/*.{js,mjs} {test,dev}/*.{js,mjs} sample/*.{js,mjs}",
    "lint:fix": "eslint --fix *.{js,mjs} src/**/*.{js,mjs} {test,dev}/*.{js,mjs} sample*/*.{js,mjs}",
    "prettier": "prettier --check *.{html,js,json,md,mjs} docs/*.{html,js,json,md,mjs} sample/*.{html,js,json,md,mjs} {dev,test}/*.{css,html,js,json,less,md,mjs} style/*.less",
    "prettier:fix": "prettier --write *.{html,js,json,md,mjs} docs/*.{html,js,json,md,mjs} src/**/*.{html,js,json,md,mjs} {dev,test}/*.{css,html,js,json,less,md,mjs} sample/*.{html,js,json,md,mjs}  style/*.less",
    "release": "standard-version",
    "spell": "export DIFFLIST=/tmp/sd97sfnsvsi && git diff --staged --diff-filter=AM --name-only > $DIFFLIST && if [ -s $DIFFLIST ]; then npx cspell --file-list stdin < $DIFFLIST; fi",
    "spell:changed": "export DIFFLIST=/tmp/sd97sfnsvsi && git diff --staged --diff-filter=AMU --name-only > $DIFFLIST && if [ -s $DIFFLIST ]; then npx cspell --file-list stdin < $DIFFLIST; fi",
    "spell:all": "cspell *.{html,js,md,mjs} docs/**/*.{html,js,json,md,mjs} src/**/*.{html,js,json,md,mjs} {dev,test}/*.{html,js,json,md,mjs} sample/*.{html,js,json,md,mjs}  style/*.less",
    "start": "webpack-dev-server",
    "start:angular": "webpack-dev-server",
    "dev": "vite serve dev",
    "dev:preview": "vite preview dev",
    "dev:build": "vite build dev",
    "test": "mocha",
    "test:cov": "nyc mocha",
    "test:debug": "mocha --inspect-brk -w",
    "cssgrid": "vite serve test"
  },
  "keywords": [
    "crossword"
  ],
  "author": "Dave Kerr",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwmkerr/crosswords-js.git"
  },
  "bugs": {
    "url": "https://github.com/dwmkerr/crosswords-js/issues"
  },
  "homepage": "https://github.com/dwmkerr/crosswords-js#readme",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.{js,mjs}"
    ],
    "exclude": [
      "src/**/*.specs.{js,mjs}"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "./artifacts/coverage"
  }
}
