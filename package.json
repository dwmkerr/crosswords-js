{
  "name": "crosswords-js",
  "version": "0.1.13",
  "description": "Tiny, lightweight crosswords for HTML5/JS/CSS.",
  "main": "src/index.js",
  "devDependencies": {
    "chai": "^4.3.7",
    "connect-livereload": "^0.6.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "ignore-styles": "^5.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "prettier": "2.8.4",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "start": "webpack-dev-server",
    "test": "mocha --require ignore-styles ./src/{,**/}*.specs.js",
    "test:cov": "nyc mocha --require ignore-styles ./src/{,**/}*.specs.js",
    "test:debug": "mocha --require ignore-styles --inspect-brk -w ./src/{,**/}*.specs.js",
    "release": "standard-version"
  },
  "keywords": [
    "crossword"
  ],
  "author": "Dave Kerr",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwmkerr/crosswords-js.git"
  },
  "bugs": {
    "url": "https://github.com/dwmkerr/crosswords-js/issues"
  },
  "homepage": "https://github.com/dwmkerr/crosswords-js#readme",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.specs.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "./artifacts/coverage"
  }
}
